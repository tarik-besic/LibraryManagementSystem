<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        html{
            width: 100%;
            height: 80vh;
        }
        body{
            background-color: #f1f1f1;
            height: 100%;
            width: 100%;
            display: flex;
            justify-content: center;
        }
        .mainContainer{
            display: flex;
            flex-direction: column;
            justify-content: center;
            width:100%;
            height: 80%;
            margin-right: 1px;
        }
        .myContainer{
            padding: 10px;
            background-color: #fff;
            border-radius: 10px;
            min-width: fit-content;
            min-height: fit-content;
            border: 1px solid #e8e8e8;

            width:100%;
            height: 80%;

        }
        .headerText{
            margin-left: 2px;
            margin-bottom: 1em;
            width: fit-content;
            height: fit-content;
            font-size: 30px;
        }
        tbody{
            background-color: #e9ecef;
        }

        /* Editing table TDS */
        .issuedDate{
            width: 8em
        }
        td{
            text-align: center;
        }
        .name{
            width: 10em;
            max-width: 15em;
        }
        .row_data
        {
            height: 100%;
            padding-top: 4px;
        }
        .action{
            min-width: 15em;
            width: 15em;
            max-width: 15em;
            
        }
    </style>
    
</head>
<body id="body-pd"class="body-pd">
    
    <%- include('./partials/nav.ejs') %>

    <div class="mainContainer">
            <span class="headerText">IssuedBooks</span>
        <div class="myContainer">
        
            <div class="input-group mb-2" id="inputTextID">
                <span class="input-group-text" id="basic-addon1">Search</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
              </div>
    
            <table class="table table-bordered" id="usersTable">
                <thead>
                    <tr>
                        <td class="name">
                            Ime
                        </td>
                        <td class="schoolClass">
                            Razred
                        </td>
                        <td class="book">
                            Knjiga
                        </td>
                        <td class="issuedDate">
                            <span>Datum izd</span>
                        </td>
                        <td class="returnedDate">
                            <span>Datum vrc</span>
                        </td>
                        <td class="action">
                            Akcija
                        </td>
                </thead>
                <tbody>
                </tr>
                <% issuedUsers.forEach((user,value)=>{ %>
                    <tr row_id=<%=value %>>
                    <td ><div class="row_data"id="user" data-email=<%=user.email %> ><%= user.name %> </div></td>
                    <td ><div class="row_data"id="userClass"><%= user._class %></div></td>
                    <td ><div class="row_data"id="userBook"><%= user.book %> </div></td>
                    <td ><div class="row_data"id="userIssuedDate"><%= user.issuedDate %> </div></td>
                    <td ><div class="row_data"id="userInput">INPUT</div></td>
                    <td>
                    <span class="btn_edit">
                      <button class="btn btn-warning btn-sm btn_return" row_id=<%=value %>> Vrati Knjigu</button>
                    </span>
                  </td>
                  </tr>
                  <%})%>
                </tbody>
            </table>
       
        </div>
    </div>
    
</body>

<script src="/javascript/javascriptNav.js"></script>
<script src="/javascript/returnBookJquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

</html>