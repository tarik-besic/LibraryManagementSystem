                                    <div class="col-md-4"> <input type="text" placeholder="Class" class="form-control" id="search_users_input_class"name="class"> </div>
                                    <div class="col-md-4"> <input type="text" class="form-control" placeholder="Book" id="search_users_input_book"name="book"> </div>
                                    <div class="col-md-4"> <input type="text" class="form-control" placeholder="Search by ..." id="search_users_input_..."> </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>  

