<form action="users/getusers/" method="get">
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card p-3 py-4">
                    <h5>Search for users</h5>
                    <div class="row g-3 mt-2">         
                        <div class="col-md-6"> <input type="text" class="form-control" placeholder="Enter users name" id="search_users_input_name"name="name"> </div>
